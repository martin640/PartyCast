<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp">

    <LinearLayout
        android:id="@+id/swipe_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="67dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_artwork"
                android:layout_width="45dp"
                android:layout_height="45dp"
                app:srcCompat="@drawable/ic_no_artwork" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textSize="16sp"
                tools:text="Title" />

            <TextView
                android:id="@+id/tv_artist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="12sp"
                tools:text="Artist" />

            <TextView
                android:id="@+id/tv_requested_by"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"
                tools:text="Requested by XYZ" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="-50dp">

            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgressBar"
                android:layout_width="35dp"
                android:layout_height="35dp"
                app:cpb_background_progressbar_color="#33000000"
                app:cpb_background_progressbar_width="1dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progress_max="100"
                app:cpb_progressbar_color="@color/colorAccent"
                app:cpb_progressbar_width="2dp"
                app:cpb_round_border="false"
                tools:cpb_progress="33" />

            <ImageButton
                android:id="@+id/ib_control"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/control_bg"
                android:clickable="true"
                android:focusable="true"
                app:srcCompat="@drawable/ic_round_play_arrow_24" />
        </FrameLayout>

        <ImageButton
            android:id="@+id/ib_skip"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/control_bg"
            android:clickable="true"
            android:focusable="true"
            app:srcCompat="@drawable/ic_round_skip_next_24" />
    </LinearLayout>

    <ImageButton
        android:id="@+id/ib_control_large"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/control_bg"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_round_play_arrow_24" />

    <ImageButton
        android:id="@+id/ib_equalizer_large"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/control_bg"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/ib_control_large"
        app:layout_constraintEnd_toStartOf="@+id/ib_control_large"
        app:layout_constraintTop_toTopOf="@+id/ib_control_large"
        app:srcCompat="@drawable/ic_round_equalizer_24" />

    <ImageButton
        android:id="@+id/ib_skip_large"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/control_bg"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="@+id/ib_control_large"
        app:layout_constraintStart_toEndOf="@+id/ib_control_large"
        app:layout_constraintTop_toTopOf="@+id/ib_control_large"
        app:srcCompat="@drawable/ic_round_skip_next_24" />

    <ProgressBar
        android:id="@+id/control_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/ib_control_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swipe_bar" />

    <TextView
        android:id="@+id/control_progress_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        app:layout_constraintBottom_toTopOf="@+id/control_progress"
        app:layout_constraintStart_toStartOf="@+id/control_progress" />

    <TextView
        android:id="@+id/control_progress_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0:00"
        app:layout_constraintBottom_toTopOf="@+id/control_progress"
        app:layout_constraintEnd_toEndOf="@+id/control_progress" />

</androidx.constraintlayout.widget.ConstraintLayout>